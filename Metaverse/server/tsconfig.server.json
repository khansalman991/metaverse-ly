{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["../types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../types/**/*.ts"
  ]
}